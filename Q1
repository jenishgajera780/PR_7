#include<stdio.h>
int main()
{
    
    int e,j;
    int n;
    
    printf(" 1 ~ Addition\n 2 ~ Subtraction\n 3 ~ Multiplication\n 4 ~ Division\n 5 ~ perstage\n");
    printf("Enter the values of e & j :- \n");
    
    scanf("%d %d",&e,&j);
    
    printf("Enter your Choice :- \n");
    
    scanf("%d",&n);
    
    switch(n)
    {
    
    case 1	:-
    
        printf("Sum of %d and %d is : %d",e,j,e+j);
        break;
    
    case 2	:-
        
        printf("Difference of %d and %d is :- %d",e,j,e-j);
        break;
    
    case 3	:-
        
        printf("Multiplication of %d and %d is :- %d",e,j,e*j);
        break;
    
    case 4	:-
        
        printf("Division of Two Numbers is %d :- ",e/j);
        break;
    
    case 5	:-
        
        printf("perstage of Two Numbers is %d :- ",e%j);
        break;    
    
    default	:-
        
        printf(" type Your Correct Choice :- ");
        break;
    }
}
